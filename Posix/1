#include <sys/stat.h>
#include<iostream>

using namespace std;
int main() {
   /*
   ** Code snippet.
   */
   struct stat sb;
   string pathname="/dev/mapper";
   if (stat(pathname.c_str(), &sb) == 0 && S_ISDIR(sb.st_mode))
   {
	   cout<<"valid directory\n";
   }
   if(0 == system("pidof -x multipathd > /dev/null")) {
	cout<<"Process is running\n";
   }
   else if(1 == system("pidof -x multipathd > /dev/null")) {
        cout<<"Not availbale proces\n";
   }

   return 0;
}

